<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <!-- Compiled and minified CSS -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
    <link type="text/css" rel="stylesheet" href="/stylesheets/style.css" media="screen,projection"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


</head>
<body>
<ul id="signUp" class="dropdown-content">
    <li><a href="/signup/customer">Customer</a></li>
    <li><a href="/signup/seller">Seller</a></li>
</ul>
<ul id="custprofile" class="dropdown-content">
    <li><a href="/cart/orders">orders</a></li>
    <li><a href="/profile">profile</a></li>
</ul>
{{#if loggedin}}
    <nav>
        <div class="nav-wrapper red darken-1">
            <a href="/" class="brand-logo center">Mokart Tech</a>
            <ul class="right hide-on-med-and-down">
                {{#ifCond user.type 'seller'}}
                    <li><a class="tooltipped" href="/dashboard/{{user.sellerid}}" data-position="bottom" data-tooltip="Seller">{{user.sname}}
                    </a></li>
                    <ul id="customer" class="dropdown-content">
                        <li><a href="#!">Seller</a></li>
                    </ul>
                    <li><a class="tooltipped" href="/seller/add" data-position="bottom" data-tooltip="Add Item"><i class="material-icons">add_circle_outline</i></a></li>
                    <li><a href="/logout">Logout</a></li>
                {{else}}
                    <li><a class="dropdown-trigger-2 tooltipped" href="#!" data-target="custprofile"  data-position="bottom" data-tooltip="Customer">{{user.cname}}
                        <i class="material-icons right">arrow_drop_down</i>
                    </a></li>

                    <ul id="customer" class="dropdown-content">
                        <li><a href="#!">Customer</a></li>
                    </ul>
                    <li><a href="/cart" class="tooltipped" data-position="bottom" data-tooltip="View Cart"><i class="material-icons">add_shopping_cart</i></a></li>
                    <li><a href="/logout">Logout</a></li>
                {{/ifCond}}
            </ul>
        </div>
    </nav>
{{else}}
    <div class="navbar-fixed">
        <nav>
            <div class="nav-wrapper red darken-1">
                <a href="/" class="brand-logo center">Mokart Tech</a>
                <ul class="right hide-on-med-and-down">
                    <li><a class="dropdown-trigger" href="#!" data-target="signUp">Sign Up
                        <i class="material-icons right">arrow_drop_down</i></a></li>
                    <li><a href="/signin">Sign In</a></li>
                </ul>

            </div>
        </nav>
    </div>
{{/if}}
{{{body}}}
<script>
    $(document).ready(function () {
        console.log("ready!");
        $(".dropdown-trigger").dropdown({hover: true});
        $(".dropdown-trigger-2").dropdown({hover: false});
        $('.tooltipped').tooltip();
    });
</script>
<script type="text/javascript" src="/js/materialize.min.js"></script>
</body>
</html>
